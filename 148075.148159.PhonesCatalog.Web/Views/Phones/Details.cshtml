@model _148075._148159.PhonesCatalog.Interfaces.IPhone

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        color: #000000;
        justify-content: center;
        display: flex;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .details-container {
        max-width: 600px;
        margin: auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .details-list dd {
        margin-top: 5px 0;
    }

    .details-list dt {
        min-width: 150px;
    }

    .back-link {
        margin-top: 20px;
        display: block;
        color: #007bff;
        text-align: center;
    }

    .edit-link {
        margin-top: 20px;
        display: block;
        color: #007bff;
        text-align: center;
    }



</style>

<div class="details-container">
    <h4>Phone details</h4>
    <hr />
    <dl class="row details-list">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfProduction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfProduction)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlreadySold)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlreadySold)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoftwareType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoftwareType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producer.Name)
        </dd>
    </dl>
</div>

<div class="edit-link">
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.ID">Edit</a>
</div>

<div class="back-link">
    <a asp-action="Index">Back to List</a>
</div>

@using _148075._148159.PhonesCatalog.Core
@model _148075._148159.PhonesCatalog.Interfaces.IPhone

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Phone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfProduction" class="control-label"></label>
                <input asp-for="YearOfProduction" class="form-control" />
                <span asp-validation-for="YearOfProduction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlreadySold" class="control-label"></label>
                <input asp-for="AlreadySold" class="form-control" />
                <span asp-validation-for="AlreadySold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoftwareType" class="control-label"></label>
                <select asp-for="SoftwareType" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(SoftwareType)))
                    {
                        <option type="radio" asp-for="SoftwareType" value="@item"> @item </option>
                    }
                </select>
                <span asp-validation-for="SoftwareType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer" class="control-label"></label>
                <select asp-for="Producer" class="form-control">
                    @foreach (var item in ViewBag.Producers)
                    {

                        <option type="radio" asp-for="Producer" value="@item.ID"> @item.Name </option>
                    }
                </select>
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
